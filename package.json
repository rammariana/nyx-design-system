{
  "name": "@camtom/nyx-design-system",
  "version": "1.4.4",
  "description": "Nyx Design System - Sistema de diseño profesional para React con TypeScript, componentes accesibles y documentación completa",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "type": "module",
  "types": "dist/index.d.ts",
  "style": "dist/index.css",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:coverage": "vitest --run --coverage",
    "lint": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "storybook": "node scripts/setup-favicon.cjs && storybook dev -p 6006",
    "build-storybook": "storybook build && node scripts/setup-favicon.cjs",
    "prepublishOnly": "npm run type-check && npm run test:run && npm run build",
    "release": "npm version patch && npm publish",
    "release:minor": "npm version minor && npm publish",
    "release:major": "npm version major && npm publish"
  },
  "keywords": [
    "react",
    "typescript",
    "design-system",
    "ui-components",
    "component-library",
    "nyx",
    "camtom",
    "accessibility",
    "storybook",
    "css-modules",
    "tree-shaking",
    "professional",
    "enterprise"
  ],
  "author": {
    "name": "Mariana - Camtom Team",
    "email": "hello@camtomx.com",
    "url": "https://camtomx.com"
  },
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "default": "./dist/index.esm.js"
    },
    "./dist/index.css": "./dist/index.css",
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    },
    "react-dom": {
      "optional": false
    }
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@storybook/addon-docs": "^7.6.6",
    "@storybook/react-vite": "^7.6.6",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.0.4",
    "bootstrap": "^5.3.2",
    "eslint": "^8.55.0",
    "jsdom": "^23.0.1",
    "prettier": "^3.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^4.9.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "storybook": "^7.6.6",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vitest": "^1.0.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rammariana/nyx-design-system.git",
    "directory": "packages/nyx-design-system"
  },
  "bugs": {
    "url": "https://github.com/rammariana/nyx-design-system/issues",
    "email": "hello@camtomx.com"
  },
  "homepage": "https://github.com/rammariana/nyx-design-system#readme",
  "funding": {
    "type": "github",
    "url": "https://github.com/rammariana/nyx-design-system#readme"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "bootstrap-icons": "^1.13.1",
    "react-hot-toast": "^2.6.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
